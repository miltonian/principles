{
    "compilerOptions": {
      "lib": ["ESNext"],
      "module": "commonjs",
      "target": "es2016",
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "dist",  
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "preserve",
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
    },
    "include": ["src/**/*.ts"]
  }
  